@{
    ViewData["Title"] = "Cloud File Storage";
}

<div class="text-center">
    <h1 class="display-4">Cloud File Storage</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome, @(User.Identity.Name?.ToUpperFirst())! <a asp-controller="Account" asp-action="Logout">Logout</a></p>
        <a asp-controller="File" asp-action="Index" class="btn btn-primary">Go to Files</a>
    }
    else
    {
        <p>Please login to manage your files or register to get started.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
    }
</div>